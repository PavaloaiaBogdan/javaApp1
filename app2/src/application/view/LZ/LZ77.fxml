<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane fx:id="root" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.model.LZ.LZ77Controller">
   <children>
      <BorderPane fx:id="lz_borderpane" layoutX="-8.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <top>
            <ToolBar BorderPane.alignment="CENTER">
               <items>
                  <Button fx:id="openFileButton" mnemonicParsing="false" onAction="#openFile" text="Open">
                     <graphic>
                        <ImageView fitHeight="25.0" fitWidth="20.0" nodeOrientation="INHERIT" pickOnBounds="true">
                           <image>
                              <Image url="@../../../media/folder.png" />
                           </image>
                           <viewport>
                              <Rectangle2D />
                           </viewport>
                        </ImageView>
                     </graphic>
                  </Button>
                  <Button fx:id="compressFileButton" layoutX="10.0" layoutY="13.0" mnemonicParsing="false" onMouseClicked="#compressButtonClicked" prefHeight="33.0" text="Encode">
                     <graphic>
                        <ImageView fitWidth="25.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@../../../media/compress.png" />
                           </image>
                        </ImageView>
                     </graphic>
                  </Button>
                  <Button fx:id="decompressFileButton" layoutX="84.0" layoutY="10.0" mnemonicParsing="false" onMouseClicked="#decompressButtonClicked" prefHeight="33.0" text="Decode">
                     <graphic>
                        <ImageView fitWidth="25.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@../../../media/decompress.png" />
                           </image>
                        </ImageView>
                     </graphic>
                  </Button>
               </items>
            </ToolBar>
         </top>
         <center>
            <SplitPane dividerPositions="0.5" BorderPane.alignment="CENTER">
               <items>
                  <TextArea fx:id="leftTextArea" wrapText="true" />
                  <TextArea fx:id="rightTextArea" editable="false" wrapText="true" />
               </items>
            </SplitPane>
         </center>
      </BorderPane>
   </children>
</AnchorPane>
